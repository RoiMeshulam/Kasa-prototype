{
  "expo": {
    "name": "kasa",
    "slug": "kasa",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "kasa",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": false,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "האפליקציה צריכה גישה למצלמה כדי לסרוק ברקודים",
        "NSMicrophoneUsageDescription": "האפליקציה צריכה גישה למיקרופון עבור שימוש עתידי",
        "NSLocationWhenInUseUsageDescription": "האפליקציה צריכה גישה למיקום שלך כדי להציג את המכונות הקרובות",
        "ExpoLocalization_supportsRTL": true,
        "UIRequiresFullScreen": false,
        "UIViewControllerBasedStatusBarAppearance": false
      },
      "bundleIdentifier": "com.meshulamdev.kasa"
    },
    "android": {
      "package": "com.meshulamdev.kasa",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyDuMDqj2N6KVskCdkOr220kGUGhtqxTLlE"
        }
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ],
      "softwareKeyboardLayoutMode": "resize"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "extra": {
      "supportsRTL": true,
      "router": {},
      "eas": {
        "projectId": "467a750f-95c4-451b-a328-ef82bd2f96d9"
      },
      "BACKEND_URL": "https://kasa-test-393925206417.europe-west1.run.app",
      "EXPO_PUBLIC_ENVIRONMENT": "test",
      "EXPO_PUBLIC_DEV_SERVER_URL": "http://localhost:3000",
      "EXPO_PUBLIC_TEST_SERVER_URL": "https://kasa-test-393925206417.europe-west1.run.app",
      "EXPO_PUBLIC_PROD_SERVER_URL": "https://your-production-server.com"
    },
    "developmentClient": {
      "silentLaunch": false
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera",
          "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone",
          "recordAudioAndroid": true
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow $(PRODUCT_NAME) to use your location."
        }
      ],
      [
        "expo-localization",
        {
          "supportedLocales": {
            "ios": [
              "en",
              "he"
            ],
            "android": [
              "en",
              "he"
            ]
          }
        }
      ],
      "expo-dev-client"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
